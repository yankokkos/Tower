  "type": "project",
  "require": {
    "php": ">=8.1",
    "slim/slim": "^4.12",
    "slim/psr7": "^1.6",
    "firebase/php-jwt": "^6.10",
    "vlucas/phpdotenv": "^5.5",
    "ramsey/uuid": "^4.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
